<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log" >
  <variable name="logDirectory" value="${basedir}/bin/logs/${shortdate}"/>
  <targets>
    <target xsi:type="File" fileName="${logDirectory}/applicationLog.log" name="applicationLog" maxArchiveFiles="5" layout="${longdate} ${level} ${message}"/>
  </targets>
  <rules>
    <logger name="*" minlevel="Error" writeTo="applicationLog"></logger>
  </rules>
</nlog>