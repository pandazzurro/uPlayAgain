<Metro:MetroContentControl x:Class="uPlayAgain.GameImporter.View.ImportGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:uPlayAgain.GameImporter.View"
             xmlns:Metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d"              
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding ImportGame, Source={StaticResource Locator}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0,25"></RowDefinition>
            <RowDefinition Height="0,75"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button Style="{DynamicResource SquareButtonStyle}">Conferma</Button>
        </Grid>
        <DataGrid Grid.Row="1" ItemsSource="{Binding prova}" AutoGenerateColumns="True" Margin="5">
            
        </DataGrid>
    </Grid>
</Metro:MetroContentControl>
